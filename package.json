{
  "name": "pos-desktop",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "electron:build": "npm run build && electron-builder --win",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never",
    "build:windows": "echo '⚠️  Windows builds must be done on Windows or via GitHub Actions. Push to GitHub and use the Actions tab to build, or run this on a Windows machine: npm run electron:build'",
    "postinstall": "node scripts/postinstall.js"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.2.6",
    "@types/better-sqlite3": "^7.6.13",
    "archiver": "^5.3.2",
    "better-sqlite3": "^12.4.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "iconv-lite": "^0.7.0",
    "lucide-react": "^0.294.0",
    "node-printer": "^1.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-simple-keyboard": "^3.8.132",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^13.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^13.6.9",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.posdesktop.app",
    "productName": "POS Desktop",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "!node_modules/**/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/**/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/*.map",
      "!node_modules/**/.{bin,git,hg,svn}",
      "!node_modules/**/{.nyc_output,coverage,coverage-lcov,coverage-final.json}",
      "!node_modules/**/.{eslintrc,prettierrc,prettierignore,eslintignore}",
      "!node_modules/**/.{travis.yml,appveyor.yml,circleci}",
      "!node_modules/**/.{npmignore,yarn-integrity,yarn-error.log}"
    ],
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*"
    ],
    "beforePack": "./scripts/before-pack.js",
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "mac": {
      "icon": "assets/icon.icns",
      "identity": null,
      "gatekeeperAssess": false,
      "hardenedRuntime": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "npmRebuild": true,
      "nodeGypRebuild": true,
      "extraResources": [
        {
          "from": "node_modules/better-sqlite3",
          "to": "better-sqlite3",
          "filter": ["**/*"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
